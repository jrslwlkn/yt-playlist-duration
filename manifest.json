{
  "name": "YouTube Playlist Duration",
  "description": "A small extension that adds the duration of the playlist to its title.",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["main.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}